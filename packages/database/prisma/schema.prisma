generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  firebaseUid String    @unique
  name        String
  email       String    @unique
  phone       String    @unique
  role        Role      @default(RIDER)

  driverProfile DriverProfile?
  ridesAsRider  Ride[]  @relation("RiderRides")
  ridesAsDriver Ride[]  @relation("DriverRides")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DriverProfile {
  id            Int    @id @default(autoincrement())
  userId        Int    @unique
  licenseNumber String @unique
  vehicleNumber String @unique
  vehicleType   String
  status        String @default("AVAILABLE") // AVAILABLE, UNAVAILABLE, ON_TRIP

  user User @relation(fields: [userId], references: [id])
}



model Ride {
  id       Int    @id @default(autoincrement())
  riderId  Int
  driverId Int? // can be null when requested
  status   String @default("REQUESTED") // REQUESTED, ACCEPTED, IN_PROGRESS, COMPLETED, CANCELLED

  pickUpLat   Float
  pickUpLong  Float
  dropOffLat  Float
  dropOffLong Float

  rider  User @relation("RiderRides", fields: [riderId], references: [id])
  driver User? @relation("DriverRides", fields: [driverId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum Role {
  RIDER
  DRIVER
  ADMIN
}
